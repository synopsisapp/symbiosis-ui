{
  "name": "@synopsisapp/symbiosis-ui",
  "version": "0.0.5",
  "license": "MIT",
  "type": "module",
  "main": "dist/symbiosis-ui.umd.js",
  "module": "dist/symbiosis-ui.es.js",
  "types": "dist/src/index.d.ts",
  "files": ["dist", "src"],
  "exports": {
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "import": "./dist/plugin/plugin.es.js",
      "require": "./dist/plugin/plugin.umd.js"
    },
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/symbiosis-ui.es.js",
      "require": "./dist/symbiosis-ui.umd.js"
    }
  },
  "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:plugin && tsc --emitDeclarationOnly",
    "build:plugin:types": "tsc -p tsconfig.plugin.json",
    "build:plugin": "vite build -c vite.config.plugin.ts && npm run build:plugin:types",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint:check": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format:check": "biome format .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@types/lodash": "^4.17.7",
    "deepmerge": "^4.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "node-html-parser": "^6.1.13",
    "rollup-plugin-node-builtins": "^2.1.2",
    "tailwind-merge": "^2.4.0"
  },
  "peerDependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@tailwindcss/typography": "^0.5.13",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.383.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "zod": "^3.23.8",
    "webpack": "^5.64.4"
  },
  "peerDependenciesMeta": {
    "webpack": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^3.0.0"
  }
}
